@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="thumbnail">
        <img src="~/images/carousel5.jpg" class="img-rounded" alt="" /> @*adicionar campo @Model.ImageUrl pra ficar adequado*@
    </div>
    <div class="caption">
        <h3 class="pull-righ">@Model.Preco.ToString("c")</h3>
        <h3>
            <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
        </h3>
        <p>@Model.DescricaoCurta</p>
    </div>
    <div class="addToCart text-right">
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemNoCarrinho" asp-route-lancheId="@Model.LancheId"> Incluir no carrinho </a>
        </p>
    </div>
</div>